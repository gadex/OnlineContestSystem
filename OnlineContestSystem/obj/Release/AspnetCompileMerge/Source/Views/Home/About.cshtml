@{
	ViewBag.Title = "About Talent Unleash";
}
<style>
	p,li {
		font-size: 18px;
	}
</style>

<div class="">
	<section class="full-section dark-section" id="section-42" data-stellar-background-ratio="0.3">
		<div class="full-section-container">
				
			<div class="container">
				<div class="row">
					<div class="col-sm-12 text-center">
								
						<h2 class="no-margin-bottom">@ViewBag.Message</h2>
								
					</div><!-- col -->
				</div><!-- row -->
			</div><!-- container -->
					
		</div><!-- full-section-container -->
	</section><!-- full-section -->
	<br />
	<div class="container">
		<div class="row">
			<div class="col-sm-offset-2 col-sm-8 text-center">
						
				<p class="text-big">
					<strong>
						Talents Unleash is a talent show and skill exhibition aimed at discovering, showcasing and harnessing great talents and skills in across different fields of endeavors including entertainment, sports, science etc.
					</strong>
				</p>
			
				<p class="text-big">
					<strong>
						The  focus is on  young people who may not have had any opportunity to bring their talent to the public domain and may not know how to apply their talents and skills to productive ventures.
					</strong>
				</p>
						
			</div><!-- col -->
		</div><!-- row -->
	</div><!-- container -->

</div>

<h2>Mission</h2>

<section class="full-section half-image" id="section-44">
<div class="full-section-container">
			
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
								
				<div class="process-steps vertical-style">
					<div class="step">

						<h3>01</h3>

						<div class="step-details">
											
							<p>To discover and showcase great young talents in Nigerians.</p>

						</div><!-- step-details -->

					</div><!-- step -->
					<div class="step">

						<h3>02</h3>

						<div class="step-details">
											
							<p>To inspire young Nigerians to unleash the greatness in them.</p>

						</div><!-- step-details -->

					</div><!-- step -->
					<div class="step">

						<h3>03</h3>

						<div class="step-details">
											
							<p>To celebrate and promote Nigerian talents in various fields.</p>

						</div><!-- step-details -->

					</div><!-- step -->
					<div class="step">

						<h3>04</h3>

						<div class="step-details">
											
							<p>To help budding entrepreneurs grow and provide jobs for the unemployed.</p>

						</div><!-- step-details -->

					</div><!-- step -->
					<div class="step">

						<h3>05</h3>

						<div class="step-details">
											
							<p>To mentor and coach young talents to greatness.</p>

						</div><!-- step-details -->

					</div><!-- step -->
					<div class="step">

						<h3>06</h3>

						<div class="step-details">
											
							<p>To guide young talents to productively engage their talents.</p>

						</div><!-- step-details -->

					</div><!-- step -->
				</div><!-- process-steps -->
								
			</div><!-- col -->
		</div><!-- row -->
	</div><!-- container -->
					
</div><!-- full-section-container -->
</section>
