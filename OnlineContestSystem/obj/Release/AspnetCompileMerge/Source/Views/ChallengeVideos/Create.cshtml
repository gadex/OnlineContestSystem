@model OnlineContestSystem.Models.ChallengeVideo

@{
    ViewBag.Title = "Create";
}

<h2>Add a video to be displayed in the challenge section</h2>


@using (Html.BeginForm("Create", "ChallengeVideos", null, FormMethod.Post,
    new { @id = "challengeVidForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ChallengeVideo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-sm-9">

                <label class="btn btn-default btn-file">
                    Browse <input type="file" accept="video/*" name="file" id="ImagePath" onchange="$('#upload-file-info').html(this.files[0].name)" style="display: none;">
                </label>
                <span class='label label-info' id="upload-file-info"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Video" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
