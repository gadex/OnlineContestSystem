@{
	ViewBag.Title = "Index";
	List<string> files = ViewBag.ProofPaths;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css" />

<div id="page-header">

	<div class="ken-burn"></div>

	<div class="page-header-overlay"></div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12">

				<h1>Seed Online Contest</h1>
				<p>
					Do you think you have what it takes? <br class="hidden-xs">
					Join below and stand a chance to win.
				</p>
				<p>@ViewBag.Title</p>
				<a href="@Url.Action("Create", "Contestants")" class="btn btn-lg" style="margin: 30px; border: solid;
