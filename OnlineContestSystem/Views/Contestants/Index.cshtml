			<li><a class="btn btn-primary play">Play</a></li>
			<li><a class="btn btn-primary stop">Stop</a></li>
		</ul>
	</div>*@
</div>

@* Display Categories *@

<div class="container" style="width: 100%;">
	<h2 style="color: purple">Categories</h2>
	<div id="categories-list" class="row list-group">

		@foreach (Category cat in Enum.GetValues(typeof(Category)))
		{
			<div class="item col-md-3 col-sm-6 col-xs-12">
				<div class="thumbnail">
					<img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt=""/>
					<div class="caption">
						<h4 class="group inner list-group-item-heading">
							@cat.ToString()</h4>
						<p class="group inner list-group-item-text">
							@cat.ToString() is... Lorem ipsum dolor sit amet, consectetuer adipiscing elit,
							sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
						<div class="row">
							<div class="col-xs-12 col-md-12">
								@Html.ActionLink("View Category", "Categories", "Contestants", new {catFinal = @cat.ToString()}, new { @class = "btn btn-primary", style="margin-top: 10px;"})
							</div>
						</div>
					</div>
				</div>
			</div>
		}

	</div>
</div>
		

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js"></script>
<script>
	$('.owl-carousel').owlCarousel({
		autoplay:true,
		autoplayTimeout:1000,
		autoplayHoverPause:true,
		loop: true,
		dots: false,
		margin: 10,
		nav: false,
		responsive: {
			0: {
				items: 1
			},
			600: {
				items: 3
			},
			1000: {
				items: 4
			}
		}
	})
</script>
<script>
	$(document).ready(function () {
		$('#list').click(function (event) { event.preventDefault(); $('#categories-list .item').addClass('list-group-item'); });
		$('#grid').click(function (event) { event.preventDefault(); $('#categories-list .item').removeClass('list-group-item'); $('#categories-list .item').addClass('grid-group-item'); });
	});
</script>