<div class="row">
	<div class="large-12 columns">
		<div class="owl-carousel owl-theme">

			@foreach (var item in Model)
			{
				<div class="item">
					<div class="thumbnail">
						<img class="group list-group-image" src="@item.Images.FirstOrDefault().Path" alt=""/>
						<div class="caption">
							<h4 class="group inner list-group-item-heading">
								@item.Name
							</h4>
							<p class="lead" style="text-align: center;">
								@item.Categories</p>
							<div class="row text-center">
								<div class="col-xs-12 col-md-6">
									<p style="font-size: 22px">@item.States</p>
								</div>
								<div class="col-xs-12 col-md-6">
									@Html.ActionLink("View Candidate", "Details", new {id = item.ID}, new {@class = "btn btn-primary btn-plan-select"})
								</div>
							</div>
						</div>
					</div>
				</div>

				@*<div class="item">
					<img class="group list-group-image" src="@item.Images.FirstOrDefault().Path" alt="" />
				</div>*@

			}
		</div>
	</div>

	@*<div class="text-center">
