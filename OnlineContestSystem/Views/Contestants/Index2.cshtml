@* Display Categories *@

<h2>Categories</h2>
<div class="container">
	<div class="row">
	
		
		@foreach (Category cat in Model.Categories)
		{
			<div class="col-md-3">
			<div class="image-box wow fadeInUp" data-wow-delay="0.2s">

				<div class="image-box-thumbnail">
					<a href="@Url.Action("Categories", "Contestants", new { id = cat.Id})"><img src="@cat.CatImage.FirstOrDefault().Path" alt=""></a>
				</div><!-- image-box-thumbnail -->

				<h4><a href="@Url.Action("Categories", "Contestants", new { id = cat.Id})">@cat.Title</a></h4>

				<p>@cat.Description</p>
			</div><!-- image-box -->

			</div><!-- col -->
	}
			

		
	</div><!-- row -->
</div><!-- container -->


@* Display Contestants *@

<div style="background-color: black; padding: 40px;">
	<h2 style="color: white;">Most Recent Contestants</h2>

	<div class="row">
		<div class="large-12 columns">
			<div class="owl-carousel owl-theme">

				@foreach (var item in Model.Contestants)
				{
					<div class="item">
						<div class="thumbnail">
							<img class="group list-group-image" src="@item.Images.FirstOrDefault().Path" alt="" />
							<div class="caption">
								<h4 class="group inner list-group-item-heading">
									@item.Name
								</h4>
								<p class="lead" style="text-align: center;">
								</p>
								<div class="row text-center">
									<div class="col-xs-12 col-md-6">
										
									</div>
									<div class="col-xs-12 col-md-6">
										@Html.ActionLink("View Candidate", "Details", new { id = item.ID }, new { @class = "btn btn-default btn-plan-select" })
									</div>
								</div>
							</div>
						</div>
					</div>

				}
			</div>
		</div>
	</div>
</div>

